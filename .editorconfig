###########################################################
# Makefile
###########################################################

[Makefile]
indent_style = tab
indent_size = 4

###########################################################
# Git-related files
###########################################################

[*.gitconfig]
indent_style = space
indent_size = 2

[*.gitattributes]
indent_style = space
indent_size = 2
